[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
label = %output%
label-padding = 1
tail = true


[module/date]
inherit                             = powerline-templates/right-to-left-item-with-separator
background                          = #1e1e1e
background-next                     = #1e1e1e
separator                           = #000000

type                                = custom/script
interval                            = 5
exec                                = date +" %Y-%m-%d (%I:%M)"
label                               = "  %output% "
label-background                    = #1e1e1e
label-foreground                    = ${colors.foreground-alt}
click-left                          = scratch Todo

[module/pulseaudio]
inherit                             = powerline-templates/right-to-left-item-with-separator
background                          = #2a2a2a
background-next                     = #1e1e1e
separator                           = #000000
type                                = internal/pulseaudio
sink                                = alsa_output.pci-0000_12_00.3.analog-stereo
format-volume                       = "   <label-volume> "
label-volume-foreground             = ${colors.foreground}
label-volume-background             = #2a2a2a
label-muted                         = " MUTE "
label-muted-foreground              = ${colors.foreground-alt3}
label-muted-background              = #2a2a2a

[module/mail]
inherit                             = powerline-templates/right-to-left-item-with-separator
